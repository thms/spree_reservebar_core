<% if flash[:alert] %>
  <div class="flash errors"><%= flash[:alert] %></div>
<% end %>

<% @body_id = 'login' %>
<div id="existing-customer">
  <h6><%= t(:returning_member) %></h6>
  <p><%= t(:login_prompt) %></p>
  <div data-hook="login">
    <%= render :partial => 'spree/shared/login' %>
    <%= t(:or) %> <%= link_to "Register for free membership", spree.signup_path %> | <%= link_to t(:forgot_password), spree.new_user_password_path %>
  </div>
</div>
<div data-hook="login_extras"></div>
