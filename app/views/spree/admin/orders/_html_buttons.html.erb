<% buttons = Spree::Config[:print_buttons] || "invoice"
   buttons = buttons.split(",").collect{|b| b.strip } %>
<%  buttons.each do |button| %>
<%= button_link_to(I18n.t(button.to_s+".print"), "/admin/invoice/#{@order.number}/#{button}.pdf", :target => "_blank") %>
<% end %>

<br class="clear" />

<% if @order.gift %>
	<%= button_link_to("Print Gift Card", "#{admin_order_gift_print_card_url(@order, @order.gift)}.pdf", :target => "_blank") %>	
<% end %>


